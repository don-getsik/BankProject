@model Bank.WebUI.Models.CreateModel

@{
    Layout = "~/Views/Shared/NonLogedLayout.cshtml";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Załóż konto</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm()) {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Twoje Imię:</label>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Twoje Nazwisko:</label>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Tesel Pesel:</label>
                @Html.TextBoxFor(x => x.Pesel, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Twój unikalny Login:</label>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Twóje prywatne Hasło:</label>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Zarejestruj sie!" />
            </div>
        }
    </div>
</div>

