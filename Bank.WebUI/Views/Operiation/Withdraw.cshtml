@model Bank.WebUI.Models.WithDrawModel

@{
    ViewBag.Title = "Withdraw";
}

<h2>Withdraw</h2>
<h3>Twój stan konta to: @ViewBag.balance</h3>
@using (Html.BeginForm())
{
    <div>
        <label>Kwota do wypłacenia: </label>
        @Html.TextBoxFor(x => x.amount)
    </div>
    <input type="submit" value="Wypłać"/>
    @Html.ActionLink("Anuluj", "Index","Account")
}
