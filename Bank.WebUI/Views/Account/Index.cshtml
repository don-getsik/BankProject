@using Bank.Domain.Entities
@model IEnumerable<BankAccount>
@{
    ViewBag.Title = "Index";
}

<div>
    <div>
        User Accounts
    </div>
    <table>
        <tr><th>ID</th><th>Name</th><th>PESEL</th></tr>
        @if (!Model.Any()) {
            <tr><td>No User Accounts</td></tr>
        } else {
            foreach (var user in Model) {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName @user.LastName</td>
                    <td>@user.Pesel</td>
                </tr>
            }
        }
    </table>
</div>
@Html.ActionLink("Create", "Create", null, new { @class = "btn btn-primary" })


